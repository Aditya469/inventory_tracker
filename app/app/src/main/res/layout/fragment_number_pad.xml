<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".numberPadFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="5">

        <TextView
            android:id="@+id/numpadValue"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textSize="18pt"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numped1"
            android:layout_row="1"
            android:layout_column="0"
            android:text="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numped2"
            android:layout_row="1"
            android:layout_column="1"
            android:text="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numped3"
            android:layout_row="1"
            android:layout_column="2"
            android:text="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numped4"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numped5"
            android:layout_row="2"
            android:layout_column="1"
            android:text="5"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numped6"
            android:layout_row="2"
            android:layout_column="2"
            android:text="6"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numped7"
            android:layout_row="3"
            android:layout_column="0"
            android:text="7"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numped8"
            android:layout_row="3"
            android:layout_column="1"
            android:text="8"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numped9"
            android:layout_row="3"
            android:layout_column="2"
            android:text="9"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numped0"
            android:layout_row="4"
            android:layout_column="0"
            android:text="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numpedClear"
            android:layout_row="4"
            android:layout_column="1"
            android:text="Clear"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:id="@+id/numpedEnter"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@android:string/ok"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            />


    </GridLayout>
</FrameLayout>