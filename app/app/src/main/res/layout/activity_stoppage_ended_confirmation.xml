<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stoppageOffConfirmationBackgroundColour"
    tools:context="com.admt.inventoryTracker.stoppageEndedConfirmation">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvStoppageOffReasonLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason string"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/stoppageOffConfirmationTextColour"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="has been resolved on"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/stoppageOffConfirmationTextColour"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tvStoppageOffJobLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="job ID string"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/stoppageOffConfirmationTextColour"
            android:textSize="32sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>